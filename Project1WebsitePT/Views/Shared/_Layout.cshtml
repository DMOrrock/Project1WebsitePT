<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -  Professional Physical Therapy & Sports Medicine</title>
    <link href="https://fonts.googleapis.com/css?family=Work+Sans&display=swap" rel="stylesheet">
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"  style="background-color: #c4c4c4; border: none">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Professional Physical Therapy & Sports Medicine", "Index", "Home", new { @class = "navbar-brand", @style="color:white" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("HOME", "Index", "Home", new { @style="color:white" })</li>
                    <li>@Html.ActionLink("ABOUT", "About", "Home", new { @style = "color:white" })</li>
                    <li>@Html.ActionLink("CONTACT", "Contact", "Home", new { @style = "color:white" })</li>
                    <li>@Html.ActionLink("EXERCISES", "Exercise", "Home", new { @style = "color:white" })</li>
                    <li>@Html.ActionLink("USER PORTAL", "LogIn", "Home", new { @style = "color:white" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>

            <p>&copy; @DateTime.Now.Year - ORROCK / MENDENHALL</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
